@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";

    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container">
    <div class="row justify-content-lg-center justify-content-md-center">
        <div class="col-lg-12">
            <div class="main_logo25" id="logo">
                <a asp-controller="Home" asp-action="Index"><img src="~/images/logo.svg" alt=""></a>
                <a asp-controller="Home" asp-action="Index"><img class="logo-inverse" src="~/images/ct_logo.svg" alt=""></a>

            </div>
        </div>

        <div class="col-lg-6 col-md-8">
            <div class="sign_form mb-5">
                <h2>Welcome Back</h2>
                <p>Log In to Your Cursus Account!</p>
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div>
                            <p>
                                There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                    article
                                    about setting up this ASP.NET application to support logging in via external services
                                </a>.
                            </p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="social_lnk_btn mt-15 color_btn_go" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="uil uil-google"></i>Continue with @provider.DisplayName</button>
                                    }
                                </p>
                            </div>
                        </form>
                    }
                }

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger fst-italic pt-3 fw-bold" role="alert"></div>
                    <div class="ui search focus mt-15">
                        <div class="ui left icon input swdh95">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email Address" />
                            <i class="uil uil-envelope icon icon2"></i>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger fst-italic mt-1 mb-2 float-start"></span>
                    </div>
                    <div class="ui search focus mt-15">
                        <div class="ui left icon input swdh95">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                            <i class="uil uil-key-skeleton-alt icon icon2"></i>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger fst-italic mt-1 mb-2 float-start"></span>
                    </div>

                    <div class="ui form mt-30 checkbox_sign">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input type="checkbox" tabindex="0" class="form-check-input hidden" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="login-btn">Log in</button>
                    </div>
                </form>
                <p class="sgntrm145">Or <a asp-page="./ForgotPassword">Forgot Password</a>.</p>
                <p class="mb-0 mt-30 hvsng145">Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a></p>
            </div>
            <div class="sign_footer mt-30"><img src="~/images/sign_logo.png" alt="">Â© 2024 <strong>Cursus</strong>. All Rights Reserved.</div>
        </div>
    </div>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    
    <script src="~/js/sweetAlert.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var Status = '@TempData["Status"]';
            if (Status === "loginerror") {
                sweetAlertError("Login failed!", "Please check your login information again.");
            }
        });
    </script>
}
