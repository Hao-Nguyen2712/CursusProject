@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<!-- Signup Start -->

<div class="sign_in_up_bg">
    <div class="container">
        <div class="row justify-content-lg-center justify-content-md-center">
            <div class="col-lg-12">
                <div class="main_logo25" id="logo">
                    <a asp-controller="Home" asp-action="Index"><img src="~/images/logo.svg" alt=""></a>
                    <a asp-controller="Home" asp-action="Index"><img class="logo-inverse" src="~/images/ct_logo.svg" alt=""></a>
                </div>
            </div>

            <div class="col-lg-6 col-md-8">
                <div class="sign_form">
                    <h2>Welcome to Cursus</h2>
                    <p>Sign Up and Start Learning!</p>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="ui search focus">
                            <div class="ui left icon input swdh11 swdh19">
                                <input asp-for="Input.Email" class="prompt srch_explore" autocomplete="username" aria-required="true" placeholder="Email" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger fst-italic mt-1 mb-2 float-start"></span>
                        </div>
                        <div class="ui search focus mt-15">
                            <div class="ui left icon input swdh11 swdh19">
                                <input asp-for="Input.Password" class="prompt srch_explore" autocomplete="new-password" aria-required="true" placeholder="Password" />

                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger fst-italic mt-1 mb-2 float-start"></span>

                        </div>
                        <div class="ui search focus mt-15">
                            <div class="ui left icon input swdh11 swdh19">
                                <input asp-for="Input.ConfirmPassword" class="prompt srch_explore" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />

                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger fst-italic mt-1 mb-2 float-start"></span>
                        </div>
                        <div class="mt-5">
                            <label class="form-label">Choose your Role</label>
                            <select asp-for="Input.Role" class="form-select mt-2">
                                <option value="Student">Student</option>
                                <option value="Instructor">Instructor</option>
                            </select>
                            <span class="error"></span>
                        </div>


                        

                        <button id="registerSubmit" type="submit" class="login-btn">Register</button>
                    </form>
                    <p class="sgntrm145">By signing up, you agree to our <a href="terms_of_use.html">Terms of Use</a> and <a href="terms_of_use.html">Privacy Policy</a>.</p>
                    <p class="mb-0 mt-30">Already have an account?<a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log In</a></p>
                </div>
            </div>
        </div>                
        <div class="sign_footer"><img src="images/sign_logo.png" alt="">Â© 2024 <strong>Cursus</strong>. All Rights Reserved.</div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
