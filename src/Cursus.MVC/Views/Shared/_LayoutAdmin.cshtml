@using Cursus.Application.Account
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Cursus.MVC.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@using Cursus.Domain.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IAccountService _accountService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Favicon Icon -->
    <link rel="icon" type="image/png" href="~/images/fav.png">


    <!-- Stylesheets -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,700,500' rel='stylesheet' asp-append-version="true">
    <link href='~/lib/vendor/unicons-2.0.1/css/unicons.css' rel='stylesheet' asp-append-version="true">
    <link href="~/css/vertical-responsive-menu1.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/instructor-dashboard.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/instructor-responsive.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/night-mode.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/sticky-footer.css" rel="stylesheet" asp-append-version="true">


    <!-- Vendor Stylesheets -->
    <link href="~/lib/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/vendor/OwlCarousel/assets/owl.carousel.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/vendor/OwlCarousel/assets/owl.theme.default.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/vendor/bootstrap-select/docs/docs/dist/css/bootstrap-select.min.css" rel="stylesheet"
        asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="~/lib/vendor/semantic/semantic.min.css" asp-append-version="true">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="has-sidebar">
    <header class="header clearfix">
        <button type="button" id="toggleMenu" class="toggle_menu">
            <i class='uil uil-bars'></i>
        </button>
        <button id="collapse_menu" class="collapse_menu">
            <i class="uil uil-bars collapse_menu--icon "></i>
            <span class="collapse_menu--label"></span>
        </button>
        <div class="main_logo" id="logo">
            <a asp-controller="Admin" asp-action="Index"><img src="~/images/logo.svg" alt=""></a>
            <a asp-controller="Admin" asp-action="Index"><img class="logo-inverse" src="~/images/ct_logo.svg" alt=""></a>
        </div>
        <div class="header_right">
            @if (@HttpContextAccessor.HttpContext.Session.GetString("UserId") != null||
                SignInManager.IsSignedIn(HttpContextAccessor.HttpContext.User)) 
            {
                var user = UserManager.GetUserAsync(HttpContextAccessor.HttpContext.User).Result;
                var userId = user.Id;
                var account = _accountService.GetAccountByUserID(userId);
                <ul>
                    <li class="profile-dropdown">
                        <a  class="opts_account" data-bs-toggle="dropdown" data-bs-auto-close="outside"
                            aria-expanded="false">
                            <img src="@account.Avatar" alt="avartar">
                        </a>
                        <div class="dropdown-menu dropdown_account drop-down dropdown-menu-end">
                            <div class="channel_my">
                                <div class="profile_link">
                                    <img src="@account.Avatar" alt="avatar">
                                    <div class="pd_content">
                                        <div class="rhte85">
                                            <h6>@account.FullName</h6>
                                            <div class="mef78" title="Verify">
                                                <i class='uil uil-check-circle'></i>
                                            </div>
                                        </div>
                                        <span>@user.Email</span>
                                    </div>
                                </div>
                                <a class="dp_link_12">View Admin Profile</a>
                            </div>
                          
                            <form class="form-inline item channel_item p-3" asp-area="Identity" asp-page="/Account/Logout"
                                method="post">
                                <button type="submit" class="item channel_item p-0"
                                        style="border: none; background: none">
                                    Logout
                                </button>
                            </form>
                        </div>
                    </li>
                </ul>
            }
        </div>
    </header>

    <nav class="vertical_nav">
        <div class="left_section menu_left" id="js-menu">
            <div class="left_section">
                <ul>
                    <li class="menu--item">
                        <a asp-controller="Admin" asp-action="index" class="menu--link" title="Dashboard">
                            <i class="uil uil-apps menu--icon"></i>
                            <span class="menu--label">Dashboard</span>
                        </a>
                    </li>
                    
                    <!-- User Management -->
                    <li class="menu--link menu--item menu--item__has_sub_menu">
                        <label class="menu--link" title="User Management">
                            <i class='uil uil-users-alt menu--icon'></i>
                            <span class="menu--label">User Management</span>
                        </label>
                        <ul class="sub_menu">
                            <li class="sub_menu--item">
                                <a asp-controller="Admin" asp-action="GetStudent" class="sub_menu--link">Students</a>
                            </li>
                            <li class="sub_menu--item">
                                <a asp-controller="Admin" asp-action="GetInstructor" class="sub_menu--link">Instructors</a>
                            </li>
                            <li class="sub_menu--item">
                                <a asp-controller="Admin" asp-action="GetListAccount" class="sub_menu--link">All Accounts</a>
                            </li>
                            <li class="sub_menu--item">
                                <a asp-controller="Admin" asp-action="GetListInstructorRegis" class="sub_menu--link">Instructor Requests</a>
                            </li>
                        </ul>
                    </li>

                    <!-- Course Management -->
                    <li class="menu--link menu--item menu--item__has_sub_menu">
                        <label class="menu--link" title="Course Management">
                            <i class='uil uil-book-open menu--icon'></i>
                            <span class="menu--label">Course Management</span>
                        </label>
                        <ul class="sub_menu">
                            <li class="sub_menu--item">
                                <a asp-controller="Admin" asp-action="GetCourseApprove" class="sub_menu--link">Course Approval</a>
                            </li>
                            <li class="sub_menu--item">
                                <a asp-controller="Admin" asp-action="GetAllCategories" class="sub_menu--link">Categories</a>
                            </li>
                            <li class="sub_menu--item">
                                <a asp-controller="Admin" asp-action="CourseAnalyze" class="sub_menu--link">Course Analytics</a>
                            </li>
                        </ul>
                    </li>

                    <!-- Financial Management -->
                    <li class="menu--link menu--item menu--item__has_sub_menu">
                        <label class="menu--link" title="Financial Management">
                            <i class='uil uil-dollar-alt menu--icon'></i>
                            <span class="menu--label">Financial</span>
                        </label>
                        <ul class="sub_menu">
                            <li class="sub_menu--item">
                                <a asp-controller="Admin" asp-action="GetTransactions" class="sub_menu--link">Transactions</a>
                            </li>
                            <li class="sub_menu--item">
                                <a asp-controller="Admin" asp-action="GetRevenue" class="sub_menu--link">Revenue Reports</a>
                            </li>
                            <li class="sub_menu--item">
                                <a asp-controller="Admin" asp-action="GetPayouts" class="sub_menu--link">Instructor Payouts</a>
                            </li>
                        </ul>
                    </li>

                    <!-- Content Management -->
                    <li class="menu--link menu--item menu--item__has_sub_menu">
                        <label class="menu--link" title="Content Management">
                            <i class='uil uil-edit menu--icon'></i>
                            <span class="menu--label">Content</span>
                        </label>
                        <ul class="sub_menu">
                            <li class="sub_menu--item">
                                <a asp-controller="Admin" asp-action="GetReports" class="sub_menu--link">User Reports</a>
                            </li>
                            <li class="sub_menu--item">
                                <a asp-controller="Admin" asp-action="GetComments" class="sub_menu--link">Comments</a>
                            </li>
                            <li class="sub_menu--item">
                                <a asp-controller="Admin" asp-action="GetReviews" class="sub_menu--link">Reviews</a>
                            </li>
                        </ul>
                    </li>

                    <!-- Promotions -->
                    <li class="menu--item">
                        <a asp-controller="Admin" asp-action="GetDiscounts" class="menu--link" title="Discounts">
                            <i class='uil uil-tag-alt menu--icon'></i>
                            <span class="menu--label">Discounts</span>
                        </a>
                    </li>

                    <!-- System Monitoring -->
                    <li class="menu--item">
                        <a asp-controller="Admin" asp-action="SystemMonitoring" class="menu--link" title="System">
                            <i class='uil uil-chart-line menu--icon'></i>
                            <span class="menu--label">System Monitor</span>
                        </a>
                    </li>
                </ul>
            </div>  
        </div>
    </nav>
    <div class="wrapper" >
        <main class="main-content">
            @RenderBody()
        </main>
        <footer class="footer mt-40">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="footer_bottm">
                            <div class="row">
                                <div class="col-md-6">
                                    <ul class="fotb_left">
                                        <li>
                                            <a asp-controller="Admin" asp-action="Index">
                                                <div class="footer_logo">
                                                    <img src="~/images/logo1.svg" alt="">
                                                </div>
                                            </a>
                                        </li>
                                        <li>
                                            <p>Â© @DateTime.Now.Year <strong>Cursus</strong>. All Rights Reserved.</p>
                                        </li>
                                    </ul>
                                </div>
                        
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Body End -->

    <script src="~/js/vertical-responsive-menu.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery-3.7.1.min.js" asp-append-version="true"></script>
    <script src="~/lib/vendor/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/vendor/OwlCarousel/owl.carousel.js" asp-append-version="true"></script>
    <script src="~/lib/vendor/bootstrap-select/docs/docs/dist/js/bootstrap-select.js"
        asp-append-version="true"></script>
    <script src="~/lib/vendor/semantic/semantic.min.js" asp-append-version="true"></script>
    <script src="~/js/custom1.js" asp-append-version="true"></script>
    <script src="~/js/night-mode.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>