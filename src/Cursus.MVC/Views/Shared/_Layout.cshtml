@using Cursus.Application.Account
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Cursus.MVC.Areas.Identity.Data
@using Cursus.MVC
@using Cursus.MVC.Models
@using Microsoft.AspNetCore.Identity
@using Cursus.Domain.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IAccountService _accountService
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cursus</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link rel="icon" type="image/png" href="~/images/fav.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
    <!-- Stylesheets -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,700,500' rel='stylesheet'>
    <link href='~/lib/vendor/unicons-2.0.1/css/unicons.css' rel='stylesheet' asp-append-version="true">
    <link href="~/css/vertical-responsive-menu.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/responsive.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/night-mode.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/student_dashboard.css" rel="stylesheet">
    <link href="~/css/student_responsive.css" rel="stylesheet">

    <!-- Vendor Stylesheets -->
    <link href="~/lib/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/vendor/OwlCarousel/assets/owl.carousel.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/vendor/OwlCarousel/assets/owl.theme.default.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/vendor/bootstrap-select/docs/docs/dist/css/bootstrap-select.min.css" rel="stylesheet"
          asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="~/lib/vendor/semantic/semantic.min.css" asp-append-version="true">

    <!-- kendo -->
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/8.0.1/default/default-ocean-blue.css" />
    <link rel="stylesheet" href="~/css/notification.css" asp-append-version="true">

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <span id="notification"></span>
    <header class="header clearfix">
        <button type="button" id="toggleMenu" class="toggle_menu">
            <i class='uil uil-bars'></i>
        </button>
        <button id="collapse_menu" class="collapse_menu">
            <i class="uil uil-bars collapse_menu--icon "></i>
            <span class="collapse_menu--label"></span>
        </button>
        <div class="main_logo" id="logo">
            <a asp-controller="Home" asp-action=""><img src="~/images/logo.svg" alt=""></a>
            <a asp-controller="Home" asp-action=""><img class="logo-inverse" src="~/images/ct_logo.svg" alt=""></a>
        </div>

        <div class="header_right">
            @if (@HttpContextAccessor.HttpContext.Session.GetString("UserId") != null ||
            SignInManager.IsSignedIn(HttpContextAccessor.HttpContext.User))
            {
                var user = UserManager.GetUserAsync(HttpContextAccessor.HttpContext.User).Result;
                var userId = user.Id;
                var account = _accountService.GetAccountByUserID(userId);
                <ul>
                    <li>
                        @await Component.InvokeAsync("SetCartCount")    
                    </li>
                    <li class="profile-dropdown">
                        <a href="#" class="opts_account" data-bs-toggle="dropdown" data-bs-auto-close="outside"
                           aria-expanded="false">
                            <img src="@account.Avatar" alt="">
                        </a>
                        <div class="dropdown-menu dropdown_account drop-down dropdown-menu-end">
                            <div class="channel_my">
                                <div class="profile_link">
                                    <img src="@account.Avatar" alt="avatar">
                                    <div class="pd_content">
                                        <div class="rhte85">
                                            <h6>@account.FullName</h6>
<div class="mef78" title="Verify">
                                                <i class='uil uil-check-circle'></i>
                                            </div>
                                        </div>
                                        <span>@user.Email</span>
                                    </div>
                                </div>
                                <a asp-controller="Student" asp-action="ViewProfile" class="dp_link_12">
                                    View Student
                                    Profile
                                </a>
                            </div>
                            <form class="form-inline item channel_item p-3" asp-area="Identity" asp-page="/Account/Logout"
                                  asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="item channel_item p-0"
                                        style="border: none; background: none; width: 100%; text-align: start;">
                                    Logout
                                </button>
                            </form>
                        </div>
                    </li>
                </ul>
            }
            else
            {
                <a class="upload_btn" asp-area="Identity" asp-page="/Account/Login">Login</a>
                <a class="upload_btn" asp-area="Identity" asp-page="/Account/Register">Register</a>
            }
        </div>
    </header>
    <!-- Header End -->
    <!-- Left Sidebar Start -->
    <nav class="vertical_nav">
        <div class="left_section menu_left" id="js-menu">
            <div class="left_section">
                <ul>
                    <li class="menu--item">
                        <a asp-controller="Home" asp-action="Index" class="menu--link" title="Home">
                            <i class='uil uil-home-alt menu--icon'></i>
                            <span class="menu--label">Home</span>
                        </a>
                    </li>
                    <li class="menu--item">
                        <a href="/Course/GetAllPurchasedCourse" class="menu--link" title="Courses">
                            <i class='uil uil-book-alt menu--icon'></i>
                            <span class="menu--label">Purchased Courses</span>
                        </a>
                    </li>
                    <li class="menu--item">
                        <a asp-action="Index" asp-controller="Certificate" class="menu--link" title="My Certification">
                            <i class='uil uil-award menu--icon'></i>
                            <span class="menu--label">My Certification</span>
                        </a>
                    </li>
                    <li class="menu--item">
                        <a asp-action="SearchCourse" asp-controller="Course" class="menu--link" title="Reviews">
                            <i class='uil uil-book menu--icon'></i>
                            <span class="menu--label">Course</span>
                        </a>
                    </li>
                    <li class="menu--item">
                        <a href="/Credits" class="menu--link" title="Credits">
                            <i class='uil uil-wallet menu--icon'></i>
                            <span class="menu--label">Credits</span>
                        </a>
                    </li>
                    <li class="menu--item menu--item__has_sub_menu">
								<label class="menu--link" title="Categories">
									<i class='uil uil-layers menu--icon'></i>
									<span class="menu--label">Categories</span>
								</label>
							@await Component.InvokeAsync("Category")
					</li>
                </ul>
            </div>
            @{
                var instructors = ViewBag.Instructors as List<AccountViewModel>;
                var limitedInstructors = instructors?.Take(2).ToList();
            }
            <div class="left_section">
                <h6 class="left_title">SUBSCRIPTIONS</h6>
                <ul>
                    @if (@HttpContextAccessor.HttpContext.Session.GetString("UserId") != null ||
                    SignInManager.IsSignedIn(HttpContextAccessor.HttpContext.User))
                    {
                        <li class="menu--item">
                            <a asp-controller="Instructor" asp-action="ViewProfile" class="menu--link user_img">
                                @await Component.InvokeAsync("Subscription", new { instructorId = "some-instructor-id" })
                            </a>
                        </li>
                    }
                    <li class="menu--item">
                        <a asp-controller="Instructor" asp-action="SearchInstructor" class="menu--link"
                           title="Browse Instructors">
                            <i class='bi bi-search menu--icon'></i>
                            <span class="menu--label">Search Instructors</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Left Sidebar End -->
    <div class="wrapper">
        @RenderBody()
        <footer class="footer mt-30">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="footer_bottm">
                            <div class="row">
                                <div class="col-md-6">
                                    <ul class="fotb_left">
                                        <li>
                                            <a asp-controller="Home" asp-action="Index">    
                                                <div class="footer_logo">
                                                    <img src="~/images/logo1.svg" alt="">
                                                </div>
                                            </a>
                                        </li>
                                        <li>
                                            <p>© @DateTime.Now.Year <strong>Cursus</strong>. All Rights Reserved.</p>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- Body End -->
    <script src="~/js/vertical-responsive-menu.min.js" asp-append-version="true"></script>
<script src="~/lib/vendor/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/vendor/OwlCarousel/owl.carousel.js" asp-append-version="true"></script>
    <script src="~/lib/vendor/semantic/semantic.min.js" asp-append-version="true"></script>
    <script src="~/lib/vendor/bootstrap-select/docs/docs/dist/js/bootstrap-select.js"
            asp-append-version="true"></script>
    <script src="~/js/custom.js" asp-append-version="true"></script>
    <script src="~/js/night-mode.js" asp-append-version="true"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
     <!-- SweetAlert 2 -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/sweetAlert.js"></script>
    <!-- kendo -->
    <script src="https://kendo.cdn.telerik.com/2024.2.514/js/kendo.all.min.js" asp-append-version="true"></script>

    <script src="~/js/notification.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>