﻿@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Cursus.MVC.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<CursusMVCUser> SignInManager
@inject UserManager<CursusMVCUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, shrink-to-fit=9">
	<meta name="description" content="Gambolthemes">
	<meta name="author" content="Gambolthemes">
	<title>Cursus</title>

	<!-- Favicon Icon -->
	<link rel="icon" type="image/png" href="~/images/fav.png">

	<!-- Stylesheets -->
	<link href='http://fonts.googleapis.com/css?family=Roboto:400,700,500' rel='stylesheet'>
	<link href='~/lib/vendor/unicons-2.0.1/css/unicons.css' rel='stylesheet'>
	<link href="~/css/vertical-responsive-menu1.min.css" rel="stylesheet">
	<link href="~/css/style.css" rel="stylesheet" asp-append-version="true">
	<link href="~/css/responsive.css" rel="stylesheet" asp-append-version="true">
	<link href="~/css/student_dashboard.css" rel="stylesheet">
	<link href="~/css/student_responsive.css" rel="stylesheet">
	<link href="~/css/night-mode.css" rel="stylesheet">
	<link href="~/css/instructor-dashboard.css" rel="stylesheet" asp-append-version="true">
	<link href="~/css/instructor-responsive.css" rel="stylesheet" asp-append-version="true">

	<!-- Vendor Stylesheets -->
	<link href="~/lib/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
	<link href="~/lib/vendor/OwlCarousel/assets/owl.carousel.css" rel="stylesheet">
	<link href="~/lib/vendor/OwlCarousel/assets/owl.theme.default.min.css" rel="stylesheet">
	<link href="~/lib/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/lib/vendor/bootstrap-select/docs/docs/dist/css/bootstrap-select.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="~/lib/vendor/semantic/semantic.min.css">

	<!-- SweetAlert 2 -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	<!-- kendo -->
	<link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/8.0.1/default/default-ocean-blue.css" />
	<link rel="stylesheet" href="~/css/notification.css" asp-append-version="true">

	<style>
		.sa4d25 {
			position: relative;
			padding-bottom: 50px;
			min-height: 500px;
		}
	</style>
	@await RenderSectionAsync("Styles", required: false)
</head>
<body>
	<span id="notification"></span>
    <header class="header clearfix">
        <button type="button" id="toggleMenu" class="toggle_menu">
            <i class='uil uil-bars'></i>
        </button>
        <button id="collapse_menu" class="collapse_menu">
            <i class="uil uil-bars collapse_menu--icon "></i>
            <span class="collapse_menu--label"></span>
        </button>
        <div class="main_logo" id="logo">
            <a asp-controller="Home" asp-action="Index"><img src="~/images/logo.svg" alt=""></a>
            <a asp-controller="Home" asp-action="Index"><img class="logo-inverse" src="~/images/ct_logo.svg" alt=""></a>
        </div>
        <div class="search120">
            <div class="ui search">
                <div class="ui left icon input swdh10">
                    <input class="prompt srch10" type="text"
                        placeholder="Search for Tuts Videos, Tutors, Tests and more..">
                    <i class='uil uil-search-alt icon icon1'></i>
                </div>
            </div>
        </div>
        <div class="header_right">
            @if (@HttpContextAccessor.HttpContext.Session.GetString("UserId") != null ||
            SignInManager.IsSignedIn(HttpContextAccessor.HttpContext.User))
            {
                <ul>
                    <li>
                        <a asp-controller="Cart" asp-action="GetCart" class="option_links" title="cart"><i
                                class='uil uil-shopping-cart-alt'></i><span id="cartCount"
                                class="noti_count">@ViewBag.CartCount</span></a>
                    </li>
                    <li class="profile-dropdown">
                        <a href="#" class="opts_account" data-bs-toggle="dropdown" data-bs-auto-close="outside"
                            aria-expanded="false">
                            <img src="~/images/left-imgs/img-6.jpg" alt="">
                        </a>
                        <div class="dropdown-menu dropdown_account drop-down dropdown-menu-end">
                            <div class="channel_my">
                                <div class="profile_link">
                                    <img src="" alt="avatar">
                                    <div class="pd_content">
                                        <div class="rhte85">
                                            <h6>ABC</h6>
                                            <div class="mef78" title="Verify">
                                                <i class='uil uil-check-circle'></i>
                                            </div>
                                        </div>
                                        <span>abc@gmail.com</span>
                                    </div>
                                </div>
                                <a asp-controller="Instructor" asp-action="ViewProfile"  class="dp_link_12">View Instructor Profile</a>
                            </div>
                            <div class="night_mode_switch__btn">
                                <a href="#" id="night-mode" class="btn-night-mode">
                                    <i class="uil uil-moon"></i> Night mode
                                    <span class="btn-night-mode-switch">
                                        <span class="uk-switch-button"></span>
                                    </span>
                                </a>
                            </div>
                            <a href="setting.html" class="item channel_item">Setting</a>
                            <a href="help.html" class="item channel_item">Help</a>
                            <a href="feedback.html" class="item channel_item">Send Feedback</a>
                            <form class="form-inline item channel_item p-3" asp-area="Identity" asp-page="/Account/Logout"
                                asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="item channel_item p-0"
                                    style="border: none; background: none">Logout</button>
                            </form>
                        </div>
                    </li>
                </ul>
            }
            else
            {
                <a class="upload_btn" asp-area="Identity" asp-page="/Account/Login">Login</a>
                <a class="upload_btn" asp-area="Identity" asp-page="/Account/Register">Register</a>
            }
        </div>
    </header>
	<!-- Header End -->
	<!-- Left Sidebar Start -->
	<nav class="vertical_nav">
		<div class="left_section menu_left" id="js-menu">
			<div class="left_section">
				<ul>
					<li class="menu--item">
						<a href="/Home/Index" class="menu--link" title="Home">
							<i class='uil uil-home-alt menu--icon'></i>
							<span class="menu--label">Home</span>
						</a>
					</li>
					<li class="menu--item">
						<a href="/Course/GetAllPurchasedCourse" class="menu--link" title="Courses">
							<i class='uil uil-book-alt menu--icon'></i>
							<span class="menu--label">Purchased Courses</span>
						</a>
					</li>
					<li class="menu--item">
						<a asp-action="Index" asp-controller="Certificate" class="menu--link" title="My Certification">
                            <i class='uil uil-award menu--icon'></i>
                            <span class="menu--label">My Certification</span>
                        </a>
					</li>
					<li class="menu--item">
						<a href="#" class="menu--link" title="Reviews">
							<i class='uil uil-star menu--icon'></i>
							<span class="menu--label">Reviews</span>
						</a>
					</li>
					<li class="menu--item">
						<a href="/Credits" class="menu--link" title="Credits">
							<i class='uil uil-wallet menu--icon'></i>
							<span class="menu--label">Credits</span>
						</a>
					</li>
					<li class="menu--item">
						<a href="student_statements.html" class="menu--link" title="Statements">
							<i class='uil uil-file-alt menu--icon'></i>
							<span class="menu--label">Statements</span>
						</a>
					</li>
				</ul>
			</div>
            @{
                var instructors = ViewBag.Instructors as List<AccountViewModel>;
                var limitedInstructors = instructors?.Take(2).ToList();
            }
           <div class="left_section">
                <h6 class="left_title">SUBSCRIPTIONS</h6>
                <ul>
                    <li class="menu--item">
                        <a asp-controller="" asp-action="" class="menu--link user_img">
                            @await Component.InvokeAsync("Subscription", new { instructorId = "some-instructor-id" })
                        </a>
                    </li>
                    <li class="menu--item">
                        <a asp-controller="Instructor" asp-action="SearchInstructor" class="menu--link"
                            title="Browse Instructors">
                            <i class='uil uil-plus-circle menu--icon'></i>
                            <span class="menu--label">Browse Instructors</span>
                        </a>
                    </li>
                </ul>
            </div>
		</div>
	</nav>
	<!-- Left Sidebar End -->
	<!-- Body Start -->

		@RenderBody()
	<footer class="footer mt-50">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="item_f1">
						<a href="terms_of_use.html">Copyright Policy</a>
						<a href="terms_of_use.html">Terms</a>
						<a href="terms_of_use.html">Privacy Policy</a>
					</div>
				</div>
				<div class="col-lg-12">
					<div class="footer_bottm">
						<div class="row">
							<div class="col-md-6">
								<ul class="fotb_left">
									<li>
										<a asp-controller="Home" asp-action="Index">
											<div class="footer_logo">
												<img src="images/logo1.svg" alt="">
											</div>
										</a>
									</li>
									<li>
										<p>© 2024 <strong>Cursus</strong>. All Rights Reserved.</p>
									</li>
								</ul>
							</div>
							<div class="col-md-6">
								<div class="edu_social_links">
									<a href="#"><i class="fab fa-facebook-f"></i></a>
									<a href="#"><i class="fab fa-twitter"></i></a>
									<a href="#"><i class="fab fa-google-plus-g"></i></a>
									<a href="#"><i class="fab fa-linkedin-in"></i></a>
									<a href="#"><i class="fab fa-instagram"></i></a>
									<a href="#"><i class="fab fa-youtube"></i></a>
									<a href="#"><i class="fab fa-pinterest-p"></i></a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</footer>

	<!-- Body End -->
	<script src="~/js/vertical-responsive-menu.min.js"></script>
	<script src="~/js/jquery-3.7.1.min.js"></script>
	<script src="~/lib/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/vendor/OwlCarousel/owl.carousel.js"></script>
	<script src="~/lib/vendor/bootstrap-select/docs/docs/dist/js/bootstrap-select.js"></script>
	<script src="~/lib/vendor/semantic/semantic.min.js" asp-append-version="true"></script>
	<script src="~/lib/vendor/bootstrap-select/docs/docs/dist/js/bootstrap-select.js"
			asp-append-version="true"></script>
	<script src="~/js/custom.js" asp-append-version="true"></script>
	<script src="~/js/night-mode.js" asp-append-version="true"></script>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
	

	<!-- kendo -->
	<script src="https://code.jquery.com/jquery-3.4.1.min.js" asp-append-version="true"></script>
	<script src="https://kendo.cdn.telerik.com/2024.2.514/js/kendo.all.min.js" asp-append-version="true"></script>
	<script src="~/js/custom.js" asp-append-version="true"></script>
	<script src="~/js/night-mode.js" asp-append-version="true"></script>
	<script src="~/js/notification.js" asp-append-version="true"></script>
	<script>
		document.addEventListener('DOMContentLoaded', function () {
			const links = document.querySelectorAll('.menu--link');
			const currentUrl = window.location.pathname;

			links.forEach(link => {
				const linkUrl = link.getAttribute('href');
				if (currentUrl === linkUrl) {
					link.classList.add('active');
				}
			});
		});
	</script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
