@using Cursus.MVC.ViewModels
@model EnrollViewModels
@{
    ViewData["Title"] = "View My Certificate";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Certificate</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Alex+Brush&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <style>
        body {
            margin: 0;
            padding: 20px;
            background-color: #f5f5f5;
            font-family: 'Poppins', sans-serif;
        }

        .certificate-container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        .certificate {
            width: 1000px;
            height: 700px;
            margin: 0 auto;
            position: relative;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: 20px solid #fff;
            box-shadow: 0 0 0 10px #667eea;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
        }

        .certificate::before {
            content: '';
            position: absolute;
            top: 30px;
            left: 30px;
            right: 30px;
            bottom: 30px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-radius: 15px;
        }

        .certificate-header {
            margin-bottom: 40px;
            z-index: 2;
        }

        .certificate-title {
            font-size: 48px;
            font-weight: 700;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            letter-spacing: 3px;
        }

        .certificate-subtitle {
            font-size: 18px;
            opacity: 0.9;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .certificate-content {
            z-index: 2;
            margin-bottom: 40px;
        }

        .certificate-text {
            font-size: 24px;
            margin-bottom: 30px;
            opacity: 0.9;
        }

        .recipient-name {
            font-size: 64px;
            font-family: 'Alex Brush', cursive;
            margin: 20px 0;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            color: #FFD700;
        }

        .course-name {
            font-size: 32px;
            font-weight: 600;
            margin: 20px 0;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
            color: #FFE4E1;
        }

        .certificate-footer {
            z-index: 2;
            display: flex;
            justify-content: space-between;
            width: 80%;
            margin-top: 60px;
        }

        .signature-section {
            text-align: center;
            min-width: 200px;
        }

        .signature-line {
            border-top: 2px solid rgba(255, 255, 255, 0.8);
            margin-bottom: 10px;
            width: 200px;
        }

        .signature-label {
            font-size: 14px;
            opacity: 0.8;
        }

        .date-section {
            text-align: right;
        }

        .completion-date {
            font-size: 16px;
            opacity: 0.9;
        }

        .decorative-elements {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            pointer-events: none;
        }

        .corner-decoration {
            position: absolute;
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }

        .corner-decoration.top-left {
            top: 50px;
            left: 50px;
        }

        .corner-decoration.top-right {
            top: 50px;
            right: 50px;
        }

        .corner-decoration.bottom-left {
            bottom: 50px;
            left: 50px;
        }

        .corner-decoration.bottom-right {
            bottom: 50px;
            right: 50px;
        }

        .button-container {
            text-align: center;
            padding: 30px;
            background: white;
        }

        .download-btn,
        .print-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 15px 30px;
            margin: 0 10px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            border-radius: 50px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }

        .download-btn:hover,
        .print-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.6);
        }

        .download-btn:active,
        .print-btn:active {
            transform: translateY(0);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }

        @@media print {
            body {
                background: white;
                padding: 0;
            }

            .button-container {
                display: none;
            }

            .certificate-container {
                box-shadow: none;
                border-radius: 0;
            }
        }
    </style>
</head>

<body>
    <div class="certificate-container">
        <div class="certificate" id="certificate">
            <div class="decorative-elements">
                <div class="corner-decoration top-left"></div>
                <div class="corner-decoration top-right"></div>
                <div class="corner-decoration bottom-left"></div>
                <div class="corner-decoration bottom-right"></div>
            </div>

            <div class="certificate-header">
                <div class="certificate-title">CERTIFICATE</div>
                <div class="certificate-subtitle">of completion</div>
            </div>

            <div class="certificate-content">
                <div class="certificate-text">This is to certify that</div>
                <div class="recipient-name">@Model.FullName</div>
                <div class="certificate-text">has successfully completed the course</div>
                <div class="course-name">@Model.CourseName</div>
                <div class="certificate-text">and is hereby awarded this certificate</div>
            </div>

            <div class="certificate-footer">
                <div class="signature-section">
                    <div class="signature-line"></div>
                    <div class="signature-label">Instructor Signature</div>
                </div>
                <div class="date-section">
                    <div class="completion-date">Date: @DateTime.Now.ToString("MMMM dd, yyyy")</div>
                </div>
            </div>
        </div>

        <div class="button-container">
            <button class="download-btn" onclick="downloadCertificate()">
                Download
            </button>
        </div>
    </div>

    <script>
        // Download certificate as PDF using html2canvas and jsPDF
        async function downloadCertificate() {
            const certificate = document.getElementById('certificate');
            const canvas = await html2canvas(certificate, {
                scale: 2,
                backgroundColor: null,
                useCORS: true,
                allowTaint: true
            });

            const { jsPDF } = window.jspdf;
            const pdf = new jsPDF('landscape', 'mm', 'a4');

            const imgData = canvas.toDataURL('image/png');
            const imgWidth = 297; // A4 landscape width in mm
            const imgHeight = (canvas.height * imgWidth) / canvas.width;

            pdf.addImage(imgData, 'PNG', 0, 0, imgWidth, imgHeight);
            pdf.save(`Certificate_${@Html.Raw(Json.Serialize(Model.FullName))}_${@Html.Raw(Json.Serialize(Model.CourseName))}.pdf`);
        }

        // Server-side PDF generation and print functions removed - using client-side PDF only

        // Add some animation when page loads
        document.addEventListener('DOMContentLoaded', function () {
            const certificate = document.getElementById('certificate');
            certificate.style.opacity = '0';
            certificate.style.transform = 'scale(0.9)';
            certificate.style.transition = 'all 0.6s ease';

            setTimeout(() => {
                certificate.style.opacity = '1';
                certificate.style.transform = 'scale(1)';
            }, 300);
        });
    </script>
</body>

</html>