@using Cursus.MVC.ViewModels
@model EnrollViewModels
@{
    ViewData["Title"] = "View My Certificate";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Certificate</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Alex+Brush&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .container {
            position: relative;
            width: 1080px;
            height: 720px;
        }

        .image {
            position: relative;
        }

            .image img {
                width: 100%;
                height: 100%;
            }

        .name {
            position: absolute;
            top: 300px; /* Adjust the value as needed */
            left: 540px; /* Adjust the value as needed */
            transform: translate(-50%, -50%);
            font-size: 63px;
            color: #000;
            font-family: 'Alex Brush', cursive;
        }

        .course {
            position: absolute;
            top: 405px; /* Adjust the value as needed */
            left: 540px; /* Adjust the value as needed */
            transform: translate(-50%, -50%);
            font-size: 38px;
            color: #000;
            font-family: 'Poppins', sans-serif;
            font-weight: 300;
        }

        p {
            width: 100%;
            text-align: center;
        }

        .create_btn_dash {
            background-color: #FF0000; /* Orange color */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 8px;
            transition: background-color 0.3s, transform 0.3s;
            float: right;
        }

            .create_btn_dash:hover {
                background-color: #FF0000; /* Darker orange on hover */
                transform: scale(1.05); /* Slightly larger on hover */
            }

            .create_btn_dash:active {
                background-color: #FF7F50; /* Coral color when clicked */
                transform: scale(0.95); /* Slightly smaller when clicked */
            }
    </style>
</head>
<body>
    @* <button class="create_btn_dash" asp-action="GenerateCertificateToPDF" asp-route-id="@item.EnrollViewModel.EnrollId" onclick="window.location.href = 'certification_center.html';">Print Certificate</button> *@
    <button class="create_btn_dash" onclick="generateCertificate(@Model.EnrollViewModel.EnrollId)">Print Certificate</button>
    <script>
        function generateCertificate(enrollId) {
            $.ajax({
                url: '@Url.Action("GenerateCertificate", "Certificate")',
                type: 'POST',
                data: { enrollId: enrollId },
                success: function (response) {
                    if (response.success) {
                        alert('Certificate generated successfully!');
                    } else {
                        alert('Failed to generate certificate.');
                    }
                },
                error: function () {
                    alert('PDF file existed in Downloads folder!');
                }
            });
        }
    </script>
    <div class="container">

        <div class="image">
            <img src="https://i.imgur.com/0JYjkDb.png" alt="Certificate Background" />
        </div>
        <div>
            <span class="name">@Model.FullName</span>
            <p class="course">@Model.CourseName</p>
        </div>
    </div>
</body>
</html>