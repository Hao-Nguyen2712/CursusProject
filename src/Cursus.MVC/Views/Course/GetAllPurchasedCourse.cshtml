@model List<Cursus.MVC.ViewModels.PurchasedViewModel>
@{
    ViewData["Title"] = "All Purchased Course";
    var count = 0;
}
<!-- Body Start -->
    @* <div class="sa4d25"> *@
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="st_title"><i class="uil uil-book-alt"></i> Purchased Courses</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="my_courses_tabs mp-30">
                        <div class="table-responsive">
                            <table class="table ucp-table" id="content-table">
                                <thead class="thead-s">
                                    <tr>
                                        <th scope="col">Item No.</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Vendor</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@(++count)</td>
                                                <td><a asp-controller="Course" asp-action="GetCourseDetail"
                                                       asp-route-id="@item.CourseVM.CourseId">@item.CourseVM.CourseName</a>
                                                </td>
                                                <td><a asp-controller="Instructor" asp-action="ViewProfile" asp-route-id="@item.CourseVM.AccountVM.Id">@item.CourseVM.AccountVM.FullName</a></td>
                                                <td>@item.CourseVM.CategoryVM.CategoryName</td>
                                                <td>@String.Format("{0:C}", @item.CourseVM.CourseMoney)</td>
                                                <td>
                                                    @if (item.isPurchase == "Enrolled")
                                                    {
                                                        <button class="btn_adcart"><a asp-controller="Course" asp-action="GetCourseDetail" asp-route-id="@item.CourseVM.CourseId"
                                                                class="text-white p-2">Go to Course</a></button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn_adcart enroll-button"
                                                                data-course-id="@item.CourseVM.CourseId">
                                                            Enroll now
                                                        </button>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center">No purchased courses!</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    @* </div> *@
<!-- Body End -->

@section scripts {
    <script>
        $(document).ready(function () {
            $('.enroll-button').on('click', function () {
                var button = $(this);
                var courseId = button.data('course-id');

                $.ajax({
                    url: '/Enrolled/EnrollCourse',
                    type: 'POST',
                    data: { courseId: courseId },
                    success: function (response) {
                        if (response.success) {
                            button.removeClass('btn-success').addClass('btn-primary').text('Go to Course').removeClass('enroll-button').attr('href', '/Course/GetCourseDetail/' + courseId);
                            sweetAlertSuccess('You have successfully enrolled in the course!');
                            window.location.reload();
                        } else {
                            sweetAlertError('Enrollment failed: ' + response.message);
                        }
                    },
                    error: function () {
                        sweetAlertError('An error occurred while enrolling.');
                    }
                });
            });
        });
    </script>
}