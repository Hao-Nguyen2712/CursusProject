@model Cursus.MVC.Models.AccountViewModel
@{
    ViewData["Title"] = "Fill User Information";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@{
    var selectedGenderMale = Model.Gender == "male" ? "selected" : "";
    var selectedGenderFemale = Model.Gender == "female" ? "selected" : "";
}
<div class="sign_in_up_bg">
    <div class="container">
        <div class="row justify-content-lg-center justify-content-md-center">
            <div class="col-lg-12">
                <div class="main_logo25" id="logo">
                    <a href="index.html"><img src="~/images/logo.svg" alt=""></a>
                    <a href="index.html"><img class="logo-inverse" src="~/images/ct_logo.svg" alt=""></a>
                </div>
            </div>

            <div class="col-lg-6 col-md-8">
                <div class="sign_form">
                    <h2>Confirm new user</h2>
                    <p>Please fill in the necessary information before experiencing</p>


                    <form id="registerForm" method="post" asp-controller="Home" asp-action="UpdateNewUser">
                        <!-- Email -->
                        <div class="ui search focus">
                            <div class="ui left icon input swdh11 swdh19">
                                <input type="email" asp-for="Email" name="email" placeholder="Email" readonly>
                                @Model.Email
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="ui search focus mt-15">
                            <div class="ui left icon input swdh11 swdh19">
                                <input type="text" asp-for="Password" name="password" placeholder="Password" required>
                            </div>
                        </div>

                        <!-- Full Name -->
                        <div class="ui search focus mt-15">
                            <div class="ui left icon input swdh11 swdh19">
                                <input type="text" asp-for="FullName" name="fullname" placeholder="Full Name" required>
                            </div>
                        </div>

                        <!-- Phone Number -->
                        <div class="ui search focus mt-15">
                            <div class="ui left icon input swdh11 swdh19">
                                <input type="tel" asp-for="Phone" name="phone" placeholder="Phone Number" required>
                            </div>
                        </div>

                        <!-- Gender -->
                    
                        <!-- Date of Birth -->
                        <div class="ui search focus mt-15">
                            <div class="ui left icon input swdh11 swdh19">
                                <input asp-for="DateofBirth" type="date" name="dateofbirth" required>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="ui search focus mt-15">
                            <div class="ui left icon input swdh11 swdh19">
                                <textarea asp-for="Description" name="description" placeholder="Description" rows="4"
                                    cols="72" required></textarea>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <button id="registerSubmit" type="submit" class="login-btn">Confirm</button>
                    </form>
                    <p class="sgntrm145">By signing up, you agree to our <a href="terms_of_use.html">Terms of Use</a>
                        and <a href="terms_of_use.html">Privacy Policy</a>.</p>

                </div>
                <div class="sign_footer"><img src="images/sign_logo.png" alt="">Â© 2024 <strong>Cursus</strong>. All
                    Rights Reserved.</div>
            </div>
        </div>
    </div>
</div>