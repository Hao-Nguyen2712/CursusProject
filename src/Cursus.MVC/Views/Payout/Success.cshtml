    ViewData["Title"] = "Success";
    Layout = "~/Views/Shared/_LayoutNotification.cshtml";
}
<!-- Body Start -->
<div class="wrapper coming_soon_wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="cmtk_group">
                    <div class="ct-logo">
                        <a href="index.html"><img src="~/images/ct_logo.svg" alt=""></a>
                    </div>
                    <div class="cmtk_dt">
                        <h1 class="thnk_coming_title">Success</h1>
                        <h4 class="thnk_title1">You have successfully withdrawn $@ViewBag.WithdrawnAmount. Please check your updated balance.</h4>
                        <p class="thnk_des"><a href="/Payout">Click here to go back to Payout</a> | <a href="/Home/Index">Back to Home</a></p>
                    </div>
                    <div class="tc_footer_main">
                        <div class="tc_footer_left">
                            <ul>
                                <li><a href="about_us.html">About</a></li>
                                <li><a href="press.html">Press</a></li>
                                <li><a href="contact_us.html">Contact Us</a></li>
                                <li><a href="coming_soon.html">Advertise</a></li>
                                <li><a href="coming_soon.html">Developers</a></li>
                                <li><a href="terms_of_use.html">Copyright</a></li>
                                <li><a href="terms_of_use.html">Privacy Policy</a></li>
                                <li><a href="terms_of_use.html">Terms</a></li>
                            </ul>
                        </div>
                        <div class="tc_footer_right">
                            <p>Â© @DateTime.Now.Year <strong>Cursus</strong>. All Rights Reserved.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/sweetAlert.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var Status = '@ViewBag.SuccessMessage';
            var WithdrawnAmount = '@ViewBag.WithdrawnAmount';
            
            if (Status === "WithdrawnSuccess") {
                sweetAlertSuccess("Success!", "You have successfully withdrawn $" + WithdrawnAmount + " from your account.");
                
                // Auto redirect to Payout page after 3 seconds
                setTimeout(function() {
                    window.location.href = '/Payout';
                }, 3000);
            }
        });
    </script>
}