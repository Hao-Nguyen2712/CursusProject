@model List<Cursus.MVC.Models.CourseViewModel>
@{
    ViewData["Title"] = "Discount Management";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="sa4d25">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="section_padding_130">
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="dashboard_tab_content">
                                <div class="orders_table">
                                    <div class="row">
                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <div class="table_title">
                                                <h2>Course Discount Management</h2>
                                                <p>Manage promotional discounts for courses</p>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    @if (TempData["SuccessMessage"] != null)
                                    {
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            @TempData["SuccessMessage"]
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                        </div>
                                    }

                                    @if (TempData["ErrorMessage"] != null)
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            @TempData["ErrorMessage"]
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                        </div>
                                    }

                                    <!-- Discount Summary Cards -->
                                    @if (Model != null && Model.Any())
                                    {
                                        var totalCoursesWithDiscount = Model.Count;
                                                        var averageDiscount = Model.Average(c => c.Discount ?? 0);
                                        var maxDiscount = Model.Max(c => c.Discount ?? 0);
                                        var totalPotentialSavings = Model.Sum(c => (c.CourseMoney ?? 0) * ((c.Discount ?? 0) / 100));
                                        
                                        <div class="row mb-4">
                                            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
                                                <div class="card stat-card">
                                                    <div class="card-body">
                                                        <h5 class="card-title">Courses with Discounts</h5>
                                                        <h2 class="text-primary">@totalCoursesWithDiscount</h2>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
                                                <div class="card stat-card">
                                                    <div class="card-body">
                                                        <h5 class="card-title">Average Discount</h5>
                                                        <h2 class="text-success">@(averageDiscount.ToString("F1"))%</h2>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
                                                <div class="card stat-card">
                                                    <div class="card-body">
                                                        <h5 class="card-title">Maximum Discount</h5>
                                                        <h2 class="text-warning">@(maxDiscount.ToString("F1"))%</h2>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
                                                <div class="card stat-card">
                                                    <div class="card-body">
                                                        <h5 class="card-title">Total Savings</h5>
                                                        <h2 class="text-info">$@totalPotentialSavings.ToString("N2")</h2>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <div class="order_table">
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">Course</th>
                                                        <th scope="col">Instructor</th>
                                                        <th scope="col">Original Price</th>
                                                        <th scope="col">Current Discount</th>
                                                        <th scope="col">Discounted Price</th>
                                                        <th scope="col">Status</th>
                                                        <th scope="col">Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model != null && Model.Any())
                                                    {
                                                        @foreach (var course in Model)
                                                        {
                                                            decimal discountPercent = course.Discount ?? 0;
                                                            decimal courseMoney = course.CourseMoney ?? 0;
                                                            decimal discountedPrice = courseMoney * (1 - discountPercent / 100);
                                                            <tr>
                                                                <td>
                                                                    <div class="order_detail">
                                                                        <div class="course-info">
                                                                            <img src="@course.CourseAvatar" alt="Course" style="width: 40px; height: 40px; object-fit: cover; border-radius: 4px;" class="me-2">
                                                                            <div>
                                                                                <span class="fw-bold">@course.CourseName</span>
                                                                                <small class="text-muted d-block">ID: @course.CourseId</small>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="order_detail">
                                                                        <span>@(course.AccountVM?.FullName ?? "Unknown")</span>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="order_detail">
                                                                        <span class="fw-bold">$@courseMoney.ToString("N2")</span>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="order_detail">
                                                                        <span class="badge bg-success">@(discountPercent.ToString("F1"))%</span>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="order_detail">
                                                                        <span class="text-success fw-bold">$@discountedPrice.ToString("N2")</span>
                                                                        <small class="text-muted d-block">Save: $@(courseMoney - discountedPrice).ToString("N2")</small>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="order_detail">
                                                                        @if (course.CourseStatus == "Active")
                                                                        {
                                                                            <span class="badge bg-success">Active</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="badge bg-secondary">@course.CourseStatus</span>
                                                                        }
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="order_actions">
                                                                        <button type="button" class="btn btn-sm btn-outline-primary" 
                                                                                onclick="editDiscount(@course.CourseId, @(course.Discount ?? 0), '@course.CourseName')">
                                                                            <i class="uil uil-edit"></i> Edit
                                                                        </button>                                                                 
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td colspan="7" class="text-center">
                                                                <div class="empty_state">
                                                                    <i class="uil uil-tag-alt" style="font-size: 3rem; color: #ccc;"></i>
                                                                    <h4>No Discounted Courses Found</h4>
                                                                    <p>There are currently no courses with active discounts.</p>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Discount Modal -->
<div class="modal fade" id="editDiscountModal" tabindex="-1" aria-labelledby="editDiscountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editDiscountModalLabel">Edit Course Discount</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="discountForm" method="post" action="@Url.Action("UpdateCourseDiscount", "Admin")">
                <div class="modal-body">
                    <input type="hidden" id="courseId" name="courseId" />
                    <div class="mb-3">
                        <label for="courseName" class="form-label">Course Name</label>
                        <input type="text" class="form-control" id="courseName" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="discount" class="form-label">Discount Percentage (%)</label>
                        <input type="number" class="form-control" id="discount" name="discount" min="0" max="100" step="0.1" required>
                        <div class="form-text">Enter a value between 0 and 100</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Discount</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .stat-card {
            margin-bottom: 1rem;
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        
        .stat-card .card-body {
            padding: 1.5rem;
        }
        
        .stat-card h5 {
            font-size: 0.875rem;
            font-weight: 600;
            color: #6c757d;
            margin-bottom: 0.5rem;
        }
        
        .empty_state {
            padding: 2rem;
            text-align: center;
        }
        
        .badge {
            font-size: 0.75rem;
        }
        
        .table td {
            vertical-align: middle;
        }
        
        .course-info {
            display: flex;
            align-items: center;
        }
        
        .order_actions .btn {
            margin-right: 5px;
            margin-bottom: 5px;
        }
    </style>
}

@section Scripts {
    <script>
        function editDiscount(courseId, currentDiscount, courseName) {
            document.getElementById('courseId').value = courseId;
            document.getElementById('courseName').value = courseName;
            document.getElementById('discount').value = currentDiscount;
            
            var modal = new bootstrap.Modal(document.getElementById('editDiscountModal'));
            modal.show();
        }
    </script>
}