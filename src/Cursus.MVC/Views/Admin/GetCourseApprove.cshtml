<body>
    
    <div class="row text-center">
			<div class="col-lg-12">
				<h2 class="st_title"><i class="fa fa-check-circle"></i>Confirm Courses</h2>
			</div>
	</div>

	<div class="wrapper" style="margin-left: 10px;margin-top: -80px">
		<div class="sa4d25">
			<div class="container-fluid">
				<div class="row">
					<div class="course_tabs">
						<nav>
							<div class="nav nav-tabs tab_crse  justify-content-center">

								<a class="nav-item nav-link active" href="/Admin/GetCourseApprove">Course</a>
								<a class="nav-item nav-link" href="/Admin/GetListAccount">Account</a>
								<a class="nav-item nav-link" href="/Admin/GetListInstructorRegis">Instructor</a>
							</div>
						</nav>
					</div>
				</div>
				@{
					int count_check = 0;
					@foreach (var Model in Model)
					{
						count_check++;
					}
					if (count_check == 0)
					{
						<h3 class="text-center" style="margin-bottom: 305px;">
							No Regis Up To Instructor
						</h3>
					}
					else
					{

						<div class="row">
							<div class="col-12">
								<div class="mt-10">

									<div class="table-cerificate">
										<div class="table-responsive">
											<table class="table table-striped table-bordered" id="content-table">
												<thead class="thead-dark">
													<tr >
														<th style="background-color: red; color: white;text-align: center; "scope="col">Item No.</th>
														<th style="background-color: red; color: white;text-align: center;" scope="col">Course Tiltle</th>
														<th style="background-color: red; color: white;text-align: center;" scope="col">Course Details</th>

													</tr>
												</thead>
												<tbody>
													@{
														int i = 1;
													}
														@foreach (var Model in Model)
														{
															<tr>
																<td class="text-center"> @i </td>
																<td class="text-center"> @Model.CourseShortDes </td>

																<td>
																	<a href="/Admin/DetailsCourseConfirm/@Model.CourseId">
																		<button class="btn btn-primary" onclick="">Details</button>

																	</a>
																</td>
															</tr>
															i++;

														}
												</tbody>
											</table>
										</div>
									</div>
								</div>
							</div>
						</div>
					}
				}
			</div>
		</div>

    
