@model IEnumerable<Cursus.MVC.Models.AccountViewModel>
@{
    ViewData["Title"] = "Account Management";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var totalAccounts = Model.Count(x => x.Role != 1);
    var activeAccounts = Model.Count(x => x.Role != 1 && (x.IsDelete == "False" || x.IsDelete == "false"));
    var blockedAccounts = Model.Count(x => x.Role != 1 && x.IsDelete != "False" && x.IsDelete != "false");
    var students = Model.Count(x => x.Role == 3);
    var instructors = Model.Count(x => x.Role == 2);
}

<div class="sa4d25">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="section_padding_130">
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="dashboard_tab_content">
                                <!-- Header and Statistics -->
                                <div class="orders_table">
                                    <div class="row">
                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <div class="table_title">
                                                <h2>Account Management</h2>
                                                <p>Manage user accounts and control access across the platform</p>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Navigation Tabs -->
                                    <div class="row mb-4">
                                        <div class="col-xl-12">
                                            <div class="course_tabs">
                                                <div class="nav nav-tabs tab_crse justify-content-center">
                                                    <a class="nav-item nav-link" href="/Admin/GetCourseApprove">
                                                        <i class="uil uil-book-open me-2"></i>Courses
                                                    </a>
                                                    <a class="nav-item nav-link active" href="/Admin/GetListAccount">
                                                        <i class="uil uil-users-alt me-2"></i>Accounts
                                                    </a>
                                                    <a class="nav-item nav-link" href="/Admin/GetListInstructorRegis">
                                                        <i class="uil uil-graduation-cap me-2"></i>Instructors
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Statistics Cards -->
                                    <div class="row mb-4">
                                        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
                                            <div class="dashboard_stats_card">
                                                <div class="dashboard_stats_card_icon">
                                                    <i class="uil uil-users-alt"></i>
                                                </div>
                                                <div class="dashboard_stats_card_content">
                                                    <h4>@totalAccounts</h4>
                                                    <p>Total Accounts</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
                                            <div class="dashboard_stats_card">
                                                <div class="dashboard_stats_card_icon approved">
                                                    <i class="uil uil-check-circle"></i>
                                                </div>
                                                <div class="dashboard_stats_card_content">
                                                    <h4>@activeAccounts</h4>
                                                    <p>Active Accounts</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
                                            <div class="dashboard_stats_card">
                                                <div class="dashboard_stats_card_icon rejected">
                                                    <i class="uil uil-ban"></i>
                                                </div>
                                                <div class="dashboard_stats_card_content">
                                                    <h4>@blockedAccounts</h4>
                                                    <p>Blocked Accounts</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
                                            <div class="dashboard_stats_card">
                                                <div class="dashboard_stats_card_icon pending">
                                                    <i class="uil uil-graduation-cap"></i>
                                                </div>
                                                <div class="dashboard_stats_card_content">
                                                    <h4>@instructors</h4>
                                                    <p>Instructors</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Filters -->
                                    <div class="row mb-4">
                                        <div class="col-xl-12">
                                            <div class="filters_section">
                                                <div class="d-flex align-items-center flex-wrap">
                                                    <div class="form-group me-3">
                                                        <input type="text" id="searchInput" class="form-control" placeholder="Search accounts...">
                                                    </div>
                                                    <div class="form-group me-3">
                                                        <select id="roleFilter" class="form-control">
                                                            <option value="">All Roles</option>
                                                            <option value="Student">Students</option>
                                                            <option value="Instructor">Instructors</option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group me-3">
                                                        <select id="statusFilter" class="form-control">
                                                            <option value="">All Status</option>
                                                            <option value="active">Active</option>
                                                            <option value="blocked">Blocked</option>
                                                        </select>
                                                    </div>
                                                    <button type="button" id="clearFilters" class="btn btn-secondary">Clear Filters</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Accounts Table -->
                                    <div class="row">
                                        <div class="col-xl-12">
                                            <div class="table-responsive">
                                                <table id="accountsTable" class="table ucp-table">
                                                    <thead class="thead-s">
                                                        <tr>
                                                            <th class="text-center">No</th>
                                                            <th class="cell-ta">ID</th>
                                                            <th class="cell-ta">Username</th>
                                                            <th class="cell-ta">Full Name</th>
                                                            <th class="cell-ta">Email</th>
                                                            <th class="cell-ta">Role</th>
                                                            <th class="cell-ta">Status</th>
                                                            <th class="text-center">Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @{
                                                            int count = 1;
                                                        }
                                                        @foreach (var account in Model)
                                                        {
                                                            if (account.Role != 1) // Exclude admin accounts
                                                            {
                                                                <tr>
                                                                    <td class="text-center">@count</td>
                                                                    <td class="cell-ta">
                                                                        <span class="badge bg-secondary">#@account.AccountId</span>
                                                                    </td>
                                                                    <td class="cell-ta">
                                                                        <div class="d-flex align-items-center">
                                                                            <div class="user-avatar me-2">
                                                                                <img src="@(string.IsNullOrEmpty(account.Avatar) ? "/images/default-avatar.png" : account.Avatar)" alt="Avatar" class="rounded-circle" width="32" height="32">
                                                                            </div>
                                                                            <span class="fw-semibold">@account.Username</span>
                                                                        </div>
                                                                    </td>
                                                                    <td class="cell-ta">@account.FullName</td>
                                                                    <td class="cell-ta">@account.Email</td>
                                                                    <td class="cell-ta">
                                                                        @if (account.Role == 3)
                                                                        {
                                                                            <span class="badge bg-info">Student</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="badge bg-warning">Instructor</span>
                                                                        }
                                                                    </td>
                                                                    <td class="cell-ta">
                                                                        @if (account.IsDelete == "False" || account.IsDelete == "false")
                                                                        {
                                                                            <span class="badge bg-success">Active</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="badge bg-danger">Blocked</span>
                                                                        }
                                                                    </td>
                                                                    <td class="text-center">
                                                                        @if (account.IsDelete == "False" || account.IsDelete == "false")
                                                                        {
                                                                            <button class="btn btn-danger btn-sm blockBtn" data-account-id="@account.AccountId" data-username="@account.Username" data-action="block">
                                                                                <i class="uil uil-ban me-1"></i>Block
                                                                            </button>
                                                                        }
                                                                        else
                                                                        {
                                                                            <button class="btn btn-success btn-sm blockBtn" data-account-id="@account.AccountId" data-username="@account.Username" data-action="unblock">
                                                                                <i class="uil uil-check-circle me-1"></i>Unblock
                                                                            </button>
                                                                        }
                                                                    </td>
                                                                </tr>
                                                                count++;
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

