@model IEnumerable<Cursus.MVC.Models.AccountViewModel>
@{
    ViewData["Title"] = "List Account";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<body>
    <div class="row text-center">
        <div class="col-lg-12">
            <h2 class="st_title"><i class="fa fa-check-circle"></i> Block/Unblock Account</h2>
        </div>
    </div>




    <div class="wrapper" style="margin-left: 10px; margin-top: -50px">
        <div class="sa4d25">
            <div class="container-fluid">
                <nav>
                    <div class="row">

                        <div class="course_tabs">

                            <div class="nav nav-tabs tab_crse  justify-content-center">

                                <a class="nav-item nav-link" href="/Admin/GetCourseApprove">Course</a>
                                <a class="nav-item nav-link active" href="/Admin/GetListAccount">Account</a>
                                <a class="nav-item nav-link" href="/Admin/GetListInstructorRegis">Instructor</a>
                            </div>
                        </div>
                    </div>
                </nav>
                <div class="row">
                    <div class="col-12">
                        <div class="mt-10">
                            <div class="table-cerificate">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered" id="content-table">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th style="color:white; background-color: #ed2a26; text-align: center;">
                                                    Item No.</th>
                                                <th style="color:white; background-color: #ed2a26; text-align: center;"
                                                    scope="col">Account ID</th>
                                                <th style="color:white; background-color: #ed2a26;text-align: center;"
                                                    scope="col">Username</th>
                                                <th style="color:white; background-color: #ed2a26;text-align: center;"
                                                    scope="col">Position</th>
                                                <th style="color:white; background-color: #ed2a26;text-align: center;"
                                                    scope="col">Block/UnBlock</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                int count = 1;
                                                @foreach (var Model in Model)
                                                {
                                                    @if (@Model.Role != 1)
                                                    {
                                                        <tr>
                                                            <td class="cell-ta"> @count </td>
                                                            <td class="cell-ta"> @Model.AccountId </td>
                                                            <td class="cell-ta">@Model.Username</td>
                                                            @{
                                                                @if (@Model.Role == 3)
                                                                {
                                                                    <td class="text-center">Student</td>
                                                                }
                                                                else
                                                                {
                                                                    <td class="text-center">Instructor</td>
                                                                }


                                                            }
                                                            @{
                                                                <td style="text-align: center">

                                                                    @if (@Model.IsDelete == "False" || @Model.IsDelete == "false")
                                                                    {
                                                                        <a asp-action="BlockAccount" asp-asp-controller="Admin" style=";"
                                                                            asp-route-id="@Model.AccountId">
                                                                            <button class="btn btn-primary" onclick="">Block</button>
                                                                        </a>
                                                                    }
                                                                    else
                                                                    {
                                                                        <a asp-action="UnBlockAccount" asp-asp-controller="Admin"
                                                                            asp-route-id="@Model.AccountId">
                                                                            <button class="btn btn-primary" onclick="">UnBlock</button>
                                                                        </a>
                                                                    }

                                                                </td>
                                                            }
                                                        </tr>
                                                        count++;
                                                    }

                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>