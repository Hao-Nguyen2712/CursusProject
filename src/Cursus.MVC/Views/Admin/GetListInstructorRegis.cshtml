@model IEnumerable<Cursus.MVC.Models.AccountViewModel>
@{
	ViewData["Title"] = "List Instructor Register";
		 Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}


<body>
	<div class="row text-center">
			<div class="col-lg-12">
				<h2 class="st_title"><i class="fa fa-check-circle"></i> Confirm Instructor</h2>
			</div>
	</div>


	<div class="wrapper" style="margin-left: 10px;margin-top: -80px">
		<div class="sa4d25">
			<div class="container-fluid">
				<nav>
					<div class="row">
						<div class="course_tabs">
							<div class="nav nav-tabs tab_crse  justify-content-center">
								<a class="nav-item nav-link" href="/Admin/GetCourseApprove">Course</a>
								<a class="nav-item nav-link " href="/Admin/GetListAccount">Account</a>
								<a class="nav-item nav-link active" href="/Admin/GetListInstructorRegis">Instructor</a>
							</div>
						</div>
					</div>
				</nav>
				@{
					int count_check = 0;
					@foreach (var Model in Model)
					{
						count_check++;
					}
					if (count_check == 0)
					{
						<h3 class="text-center" style="margin-bottom: 305px;">
							No Regis Up To Instructor
						</h3>
					}
					else
					{


						<div class="row">
							<div class="col-12">
								<div class="mt-10">
									<div class="table-cerificate">
										<div class="table-responsive">
											<table class="table table-striped table-bordered" id="content-table">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th style="background-color: red; color: white;text-align: center;"
                                                            scope="col">Item No.
                                                        </th>
                                                        <th style="background-color: red; color: white;text-align: center;"
                                                            scope="col">Account ID
                                                        </th>
                                                        <th style="background-color: red; color: white;text-align: center;"
                                                            scope="col">Username
                                                        </th>
                                                        <th style="background-color: red; color: white;text-align: center;"
                                                            scope="col">Confirm
                                                        </th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        int count = 1;
                                                        @foreach (var Model in Model)
                                                        {
                                                            <tr>
                                                                <td class="text-center"> @count </td>
                                                                <td class="text-center"> @Model.AccountId </td>
                                                                <td class="text-center">@Model.Username</td>

                                                                @{
                                                                    <td style="margin-left: 50px; text-align: center;">
                                                                        <a asp-action="ApproveInstructorRegis" asp-asp-controller="Admin"
                                                                            asp-route-id="@Model.AccountId">
                                                                            <button class="btn btn-primary" onclick="">Approve</button>
                                                                        </a>
                                                                        <a asp-action="RejectInstructorRegis" asp-asp-controller="Admin"
                                                                            asp-route-id="@Model.AccountId">
<button class="btn btn-primary" onclick="">Reject</button>
                                                                        </a>
                                                                    </td>
                                                                }
                                                            </tr>
                                                            count++;

                                                        }
                                                    }
                                                </tbody>
                                            </table>
										</div>
									</div>
								</div>
							</div>
						</div>
					}
				}
			</div>
		</div>
	</div>
</body>